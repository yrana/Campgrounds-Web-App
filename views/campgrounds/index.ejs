<% layout('layout/boilerplate') -%>
    <div id="cluster-map"></div>
    <h1>All Campgrounds</h1>

    <% for (let camp of camps){ %>
        <div class="card  mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (camp.images.length){ %>
                        <img class="img-fluid" alt="" src="<%= camp.images[0].url %>">
                        <% } else { %>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/duxjb5w5t/image/upload/v1636439521/YelpCamp/uzg5d98v13jsesj1rays.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text"><small class="text-muted">
                                <%= camp.location %>
                            </small></p>

                        <a class="btn btn-primary" href="/campgrounds/<%=camp._id%> ">View <%= camp.title %></a>
                    </div>
                </div>

            </div>

        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const camps = '<%-JSON.stringify({ features: camps }) %> '
            </script>

            <script src="/javascripts/clusterMap.js"></script>