<% layout('layout/boilerplate') -%>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= campSelected.image %>" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campSelected.title %>
                    </h5>
                    <p class="card-text">
                        <%= campSelected.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= campSelected.location %>
                    </li>
                    <li class="list-group-item">$<%= campSelected.price %>/night</li>
                </ul>
                <div class="card-body">
                    <a href="/campgrounds/<%=campSelected.id %>/edit" class="card-link btn btn-info">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campSelected.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete Campground</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
    </div>